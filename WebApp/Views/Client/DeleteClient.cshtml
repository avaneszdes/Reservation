<!DOCTYPE html>

@{
    Layout = null;
}


@model Reservation.Entities.Client;
<html>

<head>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;600&display=swap" rel="stylesheet">
    <title>Mysite</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

<body>
<div class="tablee" >
             @using (Html.BeginForm("Delete", "Client", FormMethod.Post, new {@class =  "bg" }))
                {
                    <p>
                        @Html.LabelFor(m => m.Name, "Имя" )<br/>
                        @Html.TextBoxFor(m => m.Name)
                    </p>
                    <p>
                        @Html.LabelFor(m => m.SurName, "Фамилия")<br/>
                        @Html.TextBoxFor(m => m.SurName, "", new {type = "Фамилия"})
                    </p>
                    <p>
                        @Html.LabelFor(m => m.PhoneNumber, "Номер телефона")<br/>
                        @Html.TextBoxFor(m => m.PhoneNumber)
                    </p>
                    <p>
                        <input style="margin: 10px;border-color: black;border-width: 3px; " type="submit" value="Удалить" class="nav__link"/>
                    </p>
                }
        </div>

</body>
</html>