<!DOCTYPE html>

@{
    Layout = null;
}


@model Reservation.Entities.Client;
<html>

<head>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;600&display=swap" rel="stylesheet">
    <title>Mysite</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

<body>
<div class="intro">
             @using (Html.BeginForm("Delete", "Client", FormMethod.Post, new {style="margin-left: 800px;top: 100px;"}))
                {
                    <p>
                        <h1>
                        @Html.LabelFor(m => m.Name, "Имя",new {style = "color:white"})<br/>
                        @Html.TextBoxFor(m => m.Name)
                        </h1>
                    </p>
                    <p>
                    <h1>
                        @Html.LabelFor(m => m.SurName, "Фамилия",new {style = "color:white"})<br/>
                        @Html.TextBoxFor(m => m.SurName, "", new {type = "Фамилия"})
                        </h1>
                    </p>
                    <p>
                        <h1>
                            @Html.LabelFor(m => m.PhoneNumber, "Номер телефона",new {style = "color:white"})<br/>
                            @Html.TextBoxFor(m => m.PhoneNumber)
                        </h1>
                    </p>
                    <p>
                        <h1>
                            @Html.LabelFor(m => m.PhoneNumber, "Личный номер",new {style = "color:white"})<br/>
                            @Html.TextBoxFor(m => m.Id)
                        </h1>
                    </p>
                    
                    <p>
                        <input  type="submit" value="Удалить" class="nav__link"/>
                    </p>
                }
        </div>

</body>
</html>