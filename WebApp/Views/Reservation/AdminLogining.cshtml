<!DOCTYPE html>

@{
    Layout = null;
}


@model Reservation.Entities.Client;
<html>

<head>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;600&display=swap" rel="stylesheet">
    <title>Mysite</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

<body>
<header class="header">
         <div class="container">
             <div class="header__inner">
                 <div class="header__logo" title="На главную">
                 @* <a class="nav__link" href="" target="_blank" >Забронировать столик</a> *@
                 @Html.ActionLink("My Restourant", "Index", "Home", null, new {@class = "nav__link"})
                 </div>
             </div>
         </div>
     </header>
<div class="intro">

    @using (Html.BeginForm("Logining", "Reservation", FormMethod.Post, new {style = "margin-left: 800px;top: 100px;"}))
    {
        <div style="height: 270px; width: 200px; padding-left: 15px; background-color: white;border-radius: 10px; ">
        <p>
            <h1>
                @Html.LabelFor(m => m.Name, "Логин", new {style = "color:black"})<br/>

                @Html.TextBoxFor(m => m.Name)
            </h1>
        </p>
        <p>
            <h1>
                @Html.LabelFor(m => m.SurName, "Пароль", new {style =  "color:black"})<br/>
                @Html.PasswordFor(m => m.SurName)
            </h1>
        </p>
        <p>
            <input style="border-width: 3px; background-color: #98fff0;border-color: #98fff0 " type="submit" value="Войти" class="nav__link"/>
        </p>
        </div>
    }


</div>

</body>
</html>