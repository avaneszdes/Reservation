<!DOCTYPE html>

@{
    Layout = null;
}


@using System.Net.Mime
@model WebApp.ViewModel.ClientReservationViewModel;
<html>

<head>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500;600&display=swap" rel="stylesheet">
    <title>Mysite</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>

<body>
<header class="header">
    <div class="container">
        <div class="header__inner">
            <div class="header__logo">My Restourant</div>
        </div>
    </div>
</header>
<div class="intro">
    @using (Html.BeginForm("GetReservation", "Reservation", FormMethod.Post, new {style="margin-left: 800px;top: 100px;"}))
    {
        <p>
            <h1>
            @Html.LabelFor(m => m, "Дата", new {style = "color:white"})<br/>
            @Html.TextBoxFor(model => model.CreateDateTime, new {type = "datetime-local"})
            </h1>
        </p>
        <p>
        <h1>
            @Html.LabelFor(m => m.Name, "Имя",new{style="color:white"})<br/>
            @Html.TextBoxFor(m => m.Name)
            </h1>
        </p>
        <p>
        <h1>
            @Html.LabelFor(m => m.Surname, "Фамилия",new{style="color:white"})<br/>
            @Html.TextBoxFor(m => m.Surname)
            </h1>
        </p>
        <p>
        <h1>
            @Html.LabelFor(m => m.PhoneNumber, "Номер телефона",new{style="color:white"})<br/>
            @Html.TextBoxFor(m => m.PhoneNumber, new {type = "phonenNumber"})
            </h1>
        </p>
        <p>
            <input  style="margin: 10px;border-color: black;border-width: 3px;"  type="submit" value="Забронировать"  class="nav__link"/>
        </p>
    }
</div>

</body>
</html>